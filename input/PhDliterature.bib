isbn = {0129065714},
issn = {0129-0657},
journal = {International Journal of Neural Systems},
keywords = {acoustic space learning for,binaural hearing,inference,localization,manifold learning,mixture,of regressors,sound localization,sound source separation,sound-source separation},
number = {01},
pages = {1440003},
pmid = {22577778},
