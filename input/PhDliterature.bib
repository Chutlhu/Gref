issn = {15731375},
journal = {Statistics and Computing},
keywords = {Dimensionality reduction,Expectation-maximization,Latent variable,Mixture models,Regression},
number = {5},
pages = {893--911},
title = {High-dimensional regression with gaussian mixtures and partially-latent response variables},
